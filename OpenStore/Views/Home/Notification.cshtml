@model OpenStore.Models.Notification

@{
    ViewData["Title"] = "تفاصيل الاشعار";
}

<style>
    .h2 {
        font-size: 20px;
        color: #22c0e8;
    }
</style>

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb_area bg-img" style="background-image: url(img/bg-img/breadcumb.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="page-title text-center">
                    <h2>تفاصيل الاشعار</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->



<!-- ##### ADS Area Start ##### -->
<div class="ads-img section-padding-80">
    <div class="row">
        <div class="col-12">
            <img src="/Uploads/ADS/@ViewBag.ADS1" />
        </div>
    </div>
</div>
<!-- ##### ADS Area End ##### -->



<!-- ##### Notification Area Start ##### -->
<div class="contact-area row d-flex align-items-center justify-content-center">

    <div class="col-lg-12 contact-info text-right">
        <h2 class="h2">@Model.Title</h2>
        <a href="#" class="h2 mb-5">@Model.Date.Date</a>
        <p class="mt-4">
            @Model.Message،
        </p>
    </div>
</div>
<!-- ##### Notification Area End ##### -->



<!-- ##### ADS Area Start ##### -->
<div class="ads-img section-padding-80">
    <div class="row">
        <div class="col-12">
            <img src="/Uploads/ADS/@ViewBag.ADS2" />
        </div>
    </div>
</div>
<!-- ##### ADS Area End ##### -->